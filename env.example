# Notion Integration Configuration
# Get your integration token from: https://www.notion.so/my-integrations
NOTION_TOKEN=secret_your_notion_integration_token_here

# Backup Configuration
BACKUP_OUTPUT_DIR=./backups
BACKUP_INCLUDE_BLOCKS=true
BACKUP_VALIDATE_INTEGRITY=true
BACKUP_PROCESS_FOR_COMPATIBILITY=true

# Restore Configuration
RESTORE_VALIDATE_AFTER=true
RESTORE_DRY_RUN=false
RESTORE_PARENT_PAGE_ID=

# Rate Limiting Configuration
# Notion API allows 3 requests per second average
RATE_LIMIT_REQUESTS_PER_SECOND=2.5
RATE_LIMIT_BURST_SIZE=5
RATE_LIMIT_WINDOW_SIZE=10

# Retry Configuration
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=2
RETRY_MAX_DELAY=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=notion_backup_restore.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Validation Configuration
VALIDATION_TIMEOUT=300
VALIDATION_SAMPLE_SIZE=100

# Development Configuration
DEBUG=false
VERBOSE=false

# AWS S3 Configuration (for cloud backup/restore)
# Option 1: IAM Role (OIDC/IRSA) - Recommended for EKS/ECS/EC2
# When running in AWS with proper IAM role, credentials are automatic
S3_BUCKET_NAME=your-backup-bucket-name
AWS_REGION=us-east-1
AWS_USE_IAM_ROLE=true
S3_PREFIX=notion-backups/

# Option 2: Access Keys (for local development or non-AWS environments)
# Uncomment and set these if not using IAM role
# AWS_ACCESS_KEY_ID=your-aws-access-key-id
# AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
# AWS_USE_IAM_ROLE=false
